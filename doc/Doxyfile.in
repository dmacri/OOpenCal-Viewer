# Doxyfile.in - szablon Doxyfile konfigurowany przez CMake (nie edytuj w build/)
PROJECT_NAME           = @PROJECT_NAME@
PROJECT_BRIEF          = @PROJECT_BRIEF@
PROJECT_LOGO           = @PROJECT_LOGO_PATH@

# Gdzie szukać plików źródłowych – CMake podstawia CMAKE_SOURCE_DIR
INPUT                  = @DOXYGEN_INPUT_DIR@
RECURSIVE              = YES
EXCLUDE                = @CMAKE_BINARY_DIR@/        # wyklucz katalog build

# Jakie pliki parsować
FILE_PATTERNS          = *.cpp *.cxx *.cc *.c *.h *.hpp *.hh *.ui *.qrc
EXTENSION_MAPPING      = ui=C++ qrc=C++

# Parser / preprocesor
ENABLE_PREPROCESSING   = YES
MACRO_EXPANSION        = YES
EXPAND_ONLY_PREDEF     = NO

# Makra Qt i inne przydatne
PREDEFINED             = Q_OBJECT \
                         signals=public \
                         slots=public \
                         Q_SLOTS=public \
                         Q_SIGNALS=public \
                         emit= \
                         override= \
                         Q_DECLARE_PRIVATE(x)= \
                         QT_VERSION

# Wejście/wyjście html/latex
GENERATE_HTML          = YES
HTML_OUTPUT            = html
HTML_FILE_EXTENSION    = .html

GENERATE_LATEX         = YES
LATEX_OUTPUT           = latex
USE_PDFLATEX           = YES
LATEX_BATCHMODE        = YES

# Single-file HTML: Doxygen nie ma natywnej opcji "single file" — pozostawiamy wieloplikowy HTML.
# (Uwaga: Sphinx potrafi single-file; Doxygen nie — trzeba by to spakować zewnętrznym narzędziem.)

# Index/pomoc
GENERATE_TREEVIEW      = YES
FULL_PATH_NAMES        = YES
STRIP_FROM_PATH        = @DOXYGEN_INPUT_DIR@

# Diagramy - zależne od Graphviz
HAVE_DOT               = @HAVE_DOT@
DOT_NUM_THREADS        = 0
CLASS_DIAGRAMS         = YES
DOT_IMAGE_FORMAT       = svg
DOT_GRAPH_MAX_NODES    = 200
CALL_GRAPH             = YES
CALLER_GRAPH           = YES

# Wygląd i pliki dodatkowe
HTML_HEADER            =
HTML_FOOTER            =
HTML_EXTRA_FILES       = @PROJECT_LOGO_PATH@

# Inne przydatne
GENERATE_RTF           = NO
GENERATE_XML           = NO
EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = NO
EXTRACT_STATIC         = NO
OPTIMIZE_OUTPUT_FOR_C  = NO
QUIET                  = NO
WARNINGS               = YES
WARN_IF_UNDOCUMENTED   = YES
WARN_FORMAT            = "$file:$line: $text"

USE_MDFILE_AS_MAINPAGE = README.md
# INPUT += README.md
# INPUT += ${CMAKE_SOURCE_DIR}/README.md
MARKDOWN_SUPPORT       = YES
INPUT += @CMAKE_SOURCE_DIR@/README.md

EXCLUDE_PATTERNS = \
    *_autogen* \
    moc_* \
    ui_* \
    qt_* \
    *.qrc \
    *CMakeFiles* \
    *_automoc.* \
    *_autogen/* \
    */moc_* \
    */ui_* \
    */qt_* \
    */build/*

# INPUT += @CMAKE_SOURCE_DIR@/doc/Mainpage.dox
